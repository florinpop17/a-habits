{
  "name": "a-habit",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "fly:deploy": "flyctl deploy --ha=false && flyctl scale count 1 -y",
    "preview": "astro preview",
    "astro": "astro",
    "type-check": "tsc --noEmit --pretty",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:seed": "cross-env DB_SEEDING=true bun run src/db/scripts/seed.ts",
    "db:reset": "cross-env DB_SEEDING=true bun run src/db/scripts/reset.ts",
    "stripe:listen": "stripe listen --forward-to http://localhost:4321/api/webhooks/stripe",
    "format:prettier": "prettier . --write"
  },
  "dependencies": {
    "@astrojs/alpinejs": "^0.4.0",
    "@astrojs/check": "^0.8.1",
    "@astrojs/node": "^8.3.2",
    "@astrojs/tailwind": "^5.1.0",
    "@lucia-auth/adapter-drizzle": "^1.0.7",
    "@supabase/ssr": "^0.4.0",
    "@supabase/supabase-js": "^2.44.4",
    "@types/alpinejs": "^3.13.10",
    "alpinejs": "^3.14.1",
    "astro": "^4.11.5",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "drizzle-orm": "^0.32.0",
    "htmx.org": "^2.0.1",
    "postgres": "^3.4.4",
    "stripe": "^16.2.0",
    "tailwind-merge": "^2.4.0",
    "tailwindcss": "^3.4.6",
    "typescript": "^5.5.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@types/node": "^22.0.0",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.23.0",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.5"
  }
}
